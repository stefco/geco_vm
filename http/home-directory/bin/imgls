#!/bin/bash

# go through images in the current folder

case "$1" in
    -h|--help)
        echo "View images in the current folder."
        echo "Usage:"
        echo "    imgls [optional-file-extension]"
        exit
        ;;
esac

# styling strings
bold="\033[1m"
blue="\033[47;34m"
norm="\033[0m"

ext=${1:-jpg}
files=(*$ext)
i=0
numfiles=${#files[@]}
while true; do
    this_file="${files[i]}"
    this_line="--> $this_file ($((i+1))/$numfiles)\n"
    if [ "$((i+1))" -lt $numfiles ]; then
        next_line="    ${files[i+1]} ($((i+2))/$numfiles)\n"
        next_cmnd=' [j] next'
    else
        next_line='    ~~END~~\n'
        next_cmnd=''
    fi
    if [ "$((i-1))" -ge 0 ]; then
        prev_line="    ${files[i-1]} ($((i))/$numfiles)\n"
        prev_cmnd=' [k] prev'
    else
        prev_line='    ~~BEGINNING~~\n'
        prev_cmnd=''
    fi
    # clear the screen
    # printf "\033c"
    clear
    echo
    # sleep 0.1 && 
    printf "$prev_line$blue$this_line$norm$next_line"
    imgcat "$this_file"
    echo

    read -n 1 -s -p "[q] quit$next_cmnd$prev_cmnd [g] go to line" cmnd
    num=''
    echo
    case "$cmnd" in
    q)
        clear
        printf '\nExiting.'
        echo
        exit
        ;;

    j)
        let 'i++'
        if ! [ "$i" -lt $numfiles ]; then
            printf '\nAlready on last file.'
            let 'i--'
        fi
        ;;

    k)
        let 'i--'
        if ! [ "$i" -ge 0 ]; then
            printf '\nAlready on first file.'
            let 'i++'
        fi
        ;;

    g)
        read -p 'Go to image: ' line
        # default to i if no input; remember that this counts from 1, not 0
        line=${line:-$((i+1))}
        let 'line--'
        if [ "$line" -ge 0 ] && [ "$line" -lt "$numfiles" ]; then
            i="$line"
        else
            echo Invalid choice.
        fi

    esac
    echo
done
